<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context=".DetailActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="@color/mainBackground"
        app:cardElevation="3dp"
        app:cardMaxElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mainBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/mainBackground"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Mother and Baby Health Care "
                android:textColor="@color/colorActivityBackground"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/babyTodd"
        android:layout_width="272dp"
        android:layout_height="42dp"
        android:background="#FAF9F9"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="Patient List"
        android:textAllCaps="false"
        android:textColor="@color/mainBackground"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.671" />

    <Button
        android:id="@+id/message"
        android:layout_width="273dp"
        android:layout_height="39dp"
        android:layout_marginBottom="244dp"
        android:background="#FAF9F9"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="Doctor List"
        android:textAllCaps="false"
        android:textColor="@color/mainBackground"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="408dp"
        android:layout_height="149dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/home_page_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />


</androidx.constraintlayout.widget.ConstraintLayout>